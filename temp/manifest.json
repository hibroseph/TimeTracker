{
  "manifest_version": 2,
  "name": "Time Tracker",
  "version": "0.0.1",

  "description": "An extension to keep track of the time you spend on projects",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
